<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:orientation="vertical">
    <include layout="@layout/header" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="615dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/bckgrnd"
        android:orientation="vertical">
        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:drawableLeft="@drawable/ic_cart_brown"
                android:background="@drawable/btn_brown"
                android:src="@drawable/ic_home_brown"
                android:onClick="goToHomePage"
                />

            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_brown"
                android:src="@drawable/ic_cart_brown"
                android:onClick="goToCartPage">
            </ImageButton>

            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_notif_brown"
                android:background="@drawable/btn_brown"
                android:onClick="goToNotifPage"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_data_purple"
                android:background="@drawable/btn_brown"
                />
            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_logout_brown"
                android:background="@drawable/btn_brown"
                android:onClick="goToLogoutPage"
                />

        </GridLayout>

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="440dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="serif"
                android:text="Ime:"
                android:textColor="@color/brown"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp" />
            <EditText
                android:id="@+id/ime"
                android:layout_width="220dp"                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textColor="@color/brown"
                android:textStyle="bold"
                android:inputType="text"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="serif"
                android:text="Prezime:"
                android:textColor="@color/brown"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp" />
            <EditText
                android:id="@+id/prezime"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textColor="@color/brown"
                android:textStyle="bold"
                android:inputType="text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="serif"
                android:text="Telefon:"
                android:textColor="@color/brown"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp" />
            <EditText
                android:id="@+id/telefon"
                android:layout_width="220dp"                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textColor="@color/brown"
                android:textStyle="bold"
                android:inputType="text"
                />

            <TextView
            android:layout_width="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="serif"
            android:text="Adresa:"
            android:textColor="@color/brown"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp" />
            <EditText
                android:id="@+id/adresa"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textColor="@color/brown"
                android:textStyle="bold"
                android:inputType="text"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="serif"
                android:text="Lozinka:"
                android:textColor="@color/brown"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp" />
            <EditText
                android:id="@+id/lozinka"
                android:layout_width="220dp"                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textColor="@color/brown"
                android:textStyle="bold"
                android:inputType="textPassword"
                />

            <TextView
                android:layout_width="90dp"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="serif"
                android:text="Potvrda lozinke:"
                android:textColor="@color/brown"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp" />
            <EditText
                android:id="@+id/potvrda"
                android:layout_width="220dp"                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textColor="@color/brown"
                android:textStyle="bold"
                android:inputType="textPassword"
                />


            <Button
                android:layout_row="6"
                android:layout_column="1"
                android:id="@+id/button"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/gray"
                android:fontFamily="sans-serif"
                android:text="Izmeni"
                android:textAllCaps="false"
                android:textColor="@color/brown"
                android:textStyle="bold"
                android:onClick="setData"/>
        </GridLayout>
        <TextView
            android:id = "@+id/greska"
            android:layout_width="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="serif"
            android:textColor="@color/red"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp" />
    </GridLayout>

</RelativeLayout>