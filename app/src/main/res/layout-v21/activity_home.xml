<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="615dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/bckgrnd"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_brown"
                android:src="@drawable/ic_home_purple"></ImageView>

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_brown"
                android:onClick="goToCartPage"
                android:src="@drawable/ic_cart_brown" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_brown"
                android:onClick="goToNotifPage"
                android:src="@drawable/ic_notif_brown" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_brown"
                android:onClick="goToDataPage"
                android:src="@drawable/ic_data_brown" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_brown"
                android:onClick="goToLogoutPage"
                android:src="@drawable/ic_logout_brown" />

        </GridLayout>

    </GridLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginTop="200dp">

        <ImageButton
            android:id="@+id/btn_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@android:color/transparent"
            android:onClick="prev"
            android:src="@drawable/ic_left">

        </ImageButton>

        <GridLayout
            android:layout_height="420dp"
            android:layout_width="265dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/pic1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="details"></ImageView>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp">


                <TextView
                        android:layout_marginTop="20dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:id="@+id/name1"
                        android:fontFamily="serif"
                        android:text=""
                        android:textColor="@color/brown"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_row="1"
                        android:layout_column="0"
                        android:id="@+id/price1"
                        android:fontFamily="serif"
                        android:text=""
                        android:textColor="@color/brown"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                </GridLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/pic2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="details"></ImageView>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_row="0"
                        android:layout_column="0"
                        android:id="@+id/name2"
                        android:fontFamily="serif"
                        android:text=""
                        android:textColor="@color/brown"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_row="1"
                        android:layout_column="0"
                        android:id="@+id/price2"
                        android:fontFamily="serif"
                        android:text=""
                        android:textColor="@color/brown"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                </GridLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/pic3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="details"/>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_row="0"
                        android:layout_column="0"
                        android:id="@+id/name3"
                        android:fontFamily="serif"
                        android:text=""
                        android:textColor="@color/brown"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_row="1"
                        android:layout_column="0"
                        android:id="@+id/price3"
                        android:fontFamily="serif"
                        android:text=""
                        android:textColor="@color/brown"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                </GridLayout>
            </LinearLayout>
        </GridLayout>

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@android:color/transparent"
            android:onClick="next"
            android:src="@drawable/ic_right"></ImageButton>
    </LinearLayout>


</RelativeLayout>